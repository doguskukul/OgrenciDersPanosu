
@{
    ViewBag.Title = "DersAta";
}
<link href="~/Content/DersAta.css" rel="stylesheet" type="text/css" />
<div class="tabloDiv">
    <table class="table table-bordered">
        <tr>
            <th>Ders Numarası</th>
            <th>Ders Adı</th>
            <th>OğretmenID</th>
        </tr>
        @{
            OgrenciDersPanosu.identity.IdentityDataContext dbcontext = new OgrenciDersPanosu.identity.IdentityDataContext();
        
            var dersler = from ders in dbcontext.Dersler select ders;
            var ogretmenler = from ogretmen in dbcontext.Ogretmenler select ogretmen;
            foreach (OgrenciDersPanosu.Models.Ders aDers in dersler)
            {
                <tr>
                    <td>@aDers.DersId</td>
                    <td>@aDers.DersAdi</td>
                    <td>
                        <button class="btn btn-custom4 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @aDers.Ogretmen.Ad @aDers.Ogretmen.Soyad
                         </button>
                        <div class="dropdown-menu btn-custom4" aria-labelledby="dropdownMenuButton">
                            @foreach (OgrenciDersPanosu.Models.OgretmenModel ogretmen in ogretmenler)
                            {
                                @Html.ActionLink(@ogretmen.Ad + " " + @ogretmen.Soyad, "OgretmeniAta", new { dersId = aDers.DersId, ogretmenId = ogretmen.OgretmenId }, new { @class = "btn btn-custom4" })<br />
                            }
                        </div> 
                    </td>
                </tr>
            }
        }
    </table>
</div>
 